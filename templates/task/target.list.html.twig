{% import 'components/form/fields_macros.html.twig' as fields %}

{% set rand = random() %}

<div class="container-fluid">
    <div class="mb-2">
        {% if task_active == 0 %}
            <form method="post" class="mb-2" action="{{ call("GlpiPlugin\\Deploy\\Task::getFormUrl()") }}">
                <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}">
                <input type="hidden" name="plugin_deploy_tasks_id" value="{{ task.fields['id'] }}">

                <div class="d-flex justify-content-between">
                    <div class="d-flex">
                        {{ call(
                            "Dropdown::showSelectItemFromItemtypes",
                            [
                                {
                                    'display': false,
                                    'itemtypes': call("GlpiPlugin\\Deploy\\Task_Target::getItemtypes"),
                                    'entity_restrict': task.fields['entities_id'],
                                    'ajax_page': '../ajax/dropdownTargets.php',
                                    'used': used,
                                    'disabled': true
                                }
                            ]
                        )|raw }}

                        <button class="btn btn-primary"
                                type="submit"
                                name="add_target"
                                {{ task_active == 1 ? "disabled" : "" }}>
                            <i class="{{ call("GlpiPlugin\\Deploy\\Task_Target::getIcon") }}"></i>
                            <span>{{ __("Add a new target", 'deploy') }}</span>
                        </button>
                    </div>

                    <button class="btn btn-ghost-secondary next-tab" type="button">
                        <i class="ti ti-arrow-right"></i>
                        <span>{{ __("Next") }}</span>
                    </button>
                </div>
            </form>
        {% else %}
            <div class="alert alert-warning">
                <i class="ti ti-alert-triangle"></i>
                {{ __("You can't add targets to an active task", 'deploy') }}
            </div>
        {% endif %}
    </div>

    <form name="massaction_{{ rand }}" id="massaction_{{ rand }}" method="post"
        action="{{ path('/front/massiveaction.php') }}" data-submit-once>
        <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}">
        <input type="hidden" name="action" value="purge">
        <input type="hidden" name="action_name" value="purge">
        <input type="hidden" name="processor" value="MassiveAction">

        <div class="card card-sm search-card">
            {% if targets|length == 0 %}
                <div class="alert alert-info mb-0 rounded-0 border-top-0 border-bottom-0 border-right-0 mb-0" role="alert">
                    {{ __("No target found for this task", 'deploy') }}
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="search-results table table-hover table-card" id="target_list_{{ rand }}">
                        <thead>
                            <tr>
                                {% if task_active == 0 %}
                                    <th style="width: 32px;">
                                        <input class="form-check-input" type="checkbox" id="checkall_{{ rand }}"
                                            value="" title="{{ __('Check all as') }}"
                                            data-bs-toggle="tooltip"
                                            onclick="checkAsCheckboxes('checkall_{{ rand }}', 'target_list_{{ rand }}');" />
                                    </th>
                                {% endif %}
                                <th>
                                    {{ __("Name") }}
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set task_trgt_itemtype = "GlpiPlugin\\Deploy\\Task_Target" %}
                            {% for target_id, target in targets %}
                                <tr>
                                    {% if task_active == 0 %}
                                        <td>
                                            {% set checked = session('glpimassiveactionselected')[task_trgt_itemtype][target_id] ?? false %}
                                            <input type="checkbox" class="form-check-input"
                                                name="items[{{ task_trgt_itemtype }}][{{ target_id }}]"
                                                data-glpicore-ma-tags="common"
                                                value="{{ target_id }}"
                                                {% if checked %}checked="checked"{% endif %}>
                                        </td>
                                    {% endif %}
                                    <td>
                                        <i class="{{ target.getIcon() }} me-1"></i>
                                        {{ target.getLink(true)|raw }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}

        </div>

        {% if targets|length > 0 and task_active == 0 %}
            <button class="btn btn-sm btn-ghost-secondary my-1 ms-1" type="submit" value="massiveaction">
                <i class="ti ti-corner-left-up mt-1"></i>
                <span>{{ __("Delete") }}</span>
            </button>
        {% endif %}
    </form>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $(".next-tab").on('click', function() {
        const next_tab_el = $("#tabspanel li a.active").parent('li').next('li').find("a")[0];
        const next_tab = new bootstrap.Tab(next_tab_el);
        next_tab.show();
    });
});
</script>
